#	bspc node -v {-20 0,0 20,0 -20,20 0}

XF86AudioRaiseVolume
  amixer set Master '5%+'

XF86AudioLowerVolume
  amixer set Master '5%-'

XF86AudioMute
  amixer set Master 1+ toggle

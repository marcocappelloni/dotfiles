#
# wm independent hotkeys
#

########## APPS ##########

# First browser
super + F1
	  brave

super + shift + F1
    brave --incognito

# Second browser
super + F2
	  chromium

#File manager
super + F3
    pcmanfm

super + shift + F3
    kitty --class yazi -e yazi

super + F5
    libreoffice --calc ~/PersonalHome/Lavoro/PizzaExpress/WorkingHours_2025.ods

super + F6
    evolution

# terminal emulator
super + Return
	  kitty

super + shift + Return
    ghostty

#Calendar
super + c
    gsimplecal

# Apps launcher
super + d
    rofi -show drun -show-icons -monitor 1

super + shift + d
    dmenu_run -i -fn 'FiraCode Nerd Font:size=10' -l 15

# Pass menu
super + p
    passmenu -l 15

super + shift + p
    qtpass

# Show opened windows
super + w
    rofi -show window -show-icons


########## SCRIPTS ##########

# Keybindings
super + F9
    keybindings

# Vim keybindings list
super + b
    vim_keys

# Development environment
super + e
    devel_environment

# Modified git repositories
super + g
    git_modified_repos

super + shift + h
    listconfigs

# Clock
super + t
    clock

super + shift + t
    todomenu

super + 0
  powermenu

########## BSPWM HOTKEYS ##########

# focus to the given desktop
super + {1-9}
	bspc desktop --focus '{1,2,3,4,5,6,7,8,9}'

# send to the given desktop and focus on it
super + shift + {1-9}
	bspc node -d '{1,2,3,4,5,6,7,8,9}' --follow

# set the window state
super + {f,shift + f}
	bspc node -t {floating,tiled}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send --expire-time=3000 "sxhkd" "Reloaded config"

# quit bspwm
super + alt + q
	bspc quit

# restart bspwm
super + alt + r
	bspc wm -r; notify-send --expire-time=3000 "bspwm" "Restarted"

# close window
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# focus the node in the given direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# send the node to the node in the given direction
super + shift + {Left,Down,Up,Right}
	bspc node -n {west,south,north,east} --follow

# focus the next monitor
super + Prior
  bspc monitor -f prev

# focus the previous monitor
super + Next
  bspc monitor -f next

# send the node to the previous monitor
super + shift + Prior
  bspc node -m prev --follow

# send the node to the next monitor
super + shift + Next
  bspc node -m next --follow

########## Volume keys ##########

XF86AudioRaiseVolume
  amixer set Master '5%+'

XF86AudioLowerVolume
  amixer set Master '5%-'

XF86AudioMute
  amixer set Master 1+ toggle
